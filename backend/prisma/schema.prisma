// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String
  password      String
  code          String    @unique
  recorded_days Records[]
}

model Records {
  id     Int       @id @default(autoincrement())
  user   User      @relation(fields: [userID], references: [id])
  userID Int
  date   DateTime
  start  DateTime
  end    DateTime?

  //user s√≥ pode ser registrado apenas uma vez por dia 
  @@unique([userID, date])
}
